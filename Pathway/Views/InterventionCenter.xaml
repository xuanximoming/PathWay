                                <Button Height="28" Width="65" Name="rbtnQueryQCRecord" Grid.Row="3" ToolTipService.ToolTip="按时间段查询" Grid.Column="8" Click="rbtnQuery_Click" HorizontalAlignment="Left" Margin="10,0,0,0" TabIndex="9" BorderThickness="0">
                                    <Image Height="26" Margin="-2" Source="/Pathway;component/Images/查询.png" Width="63" Cursor="Hand" />
                                </Button>

                                <!--<telerik:RadButton x:Name="rbtnAutoCreateQCRecord" Content=" 自动生成 " ToolTipService.ToolTip="自动生成问题记录" Margin="5,4,10,4" Click="rbtnAutoCreateQCRecord_Click" />-->

                                <Button Height="28" Width="78" Name="rbtnAutoCreateQCRecord" Grid.Row="3" ToolTipService.ToolTip="自动生成问题记录" Grid.Column="8" Click="rbtnAutoCreateQCRecord_Click" HorizontalAlignment="Left" Margin="10,0,0,0" TabIndex="9" BorderThickness="0">
                                    <Image Height="26" Margin="-2" Source="/Pathway;component/Images/自动生成.png" Width="76" Cursor="Hand" />
                                </Button>
                                
                                <!--<telerik:RadButton  Content="打印" Height="Auto" HorizontalAlignment="Left"  Name="btnPrintCRecord" 
                                           VerticalAlignment="Top" Width="48" Click="btnPrintCRecord_Click" Margin="5,4,10,4"/>-->

                                <Button Height="28" Width="65" Name="btnPrintCRecord" Grid.Row="3"  Grid.Column="8" Click="btnPrintCRecord_Click" HorizontalAlignment="Left" Margin="10,0,0,0" TabIndex="9" BorderThickness="0">
                                    <Image Height="26" Margin="-2" Source="/Pathway;component/Images/打印.png" Width="63" Cursor="Hand" />
                                </Button>
                            </StackPanel>
                            <!-- 数据列表 -->
                            <telerik:RadGridView x:Name="rgvQCRecordTip" Grid.Column="0" Grid.Row="1" BorderThickness="1"   GridLinesVisibility="Both" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  IsReadOnly="True" 
                                                              AutoGenerateColumns="False" IsFilteringAllowed="False"   SelectionMode="Multiple"
                                                              ShowGroupPanel="False" RowIndicatorVisibility="Collapsed" >
                                <telerik:RadGridView.Columns>
                                    <telerik:GridViewSelectColumn  IsReadOnly="False" />
                                    <telerik:GridViewDataColumn Header="病人编号" DataMemberBinding="{Binding Syxh}" Width="70"/>
                                    <telerik:GridViewDataColumn Header="病人名称" DataMemberBinding="{Binding Hzxm}" Width="70" />
                                    <telerik:GridViewDataColumn Header="入径日期" DataMemberBinding="{Binding Jrsj}" Width="150"/>
                                    <telerik:GridViewDataColumn Header="路径名称" DataMemberBinding="{Binding Ljmc}" Width="150"/>
                                    <telerik:GridViewDataColumn Header="床位医生" DataMemberBinding="{Binding Ysxm}" Width="70"/>
                                    <telerik:GridViewDataColumn Header="提示信息" DataMemberBinding="{Binding Blts}" Width="200"/>
                                </telerik:RadGridView.Columns>
                            </telerik:RadGridView >
                            <telerik:RadDataPager VerticalAlignment="Top" BorderThickness="0"  Grid.Row="2" Grid.Column="0" 
								               x:Name="rdpQCRecordTip"
                                                Source="{Binding Items, ElementName=rgvQCRecordTip}"
                                                PageSize="10" HorizontalContentAlignment="Right" DisplayMode="FirstLastPreviousNextNumeric"
								               AutoEllipsisMode="Both"
								               NumericButtonCount="10"
								               IsTotalItemCountFixed="True"/>
                        </Grid>
                    </telerik:RadBusyIndicator>
                </telerik:RadTileViewItem.Content>
            </telerik:RadTileViewItem>

            <!-- 病人中途退出信息 -->
