                                <Button Height="28" Width="65" Name="btnPrintForceToPath" Grid.Row="3"  Grid.Column="8" Click="btnPrintForceToPath_Click" HorizontalAlignment="Left" Margin="10,0,0,0" TabIndex="9" BorderThickness="0">
                                    <Image Height="26" Margin="-2" Source="/Pathway;component/Images/打印.png" Width="63" Cursor="Hand" />
                                </Button>
