<UserControl x:Class="YidanEHRApplication.WorkFlow.Designer.ActivityPictureContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:pic="clr-namespace:YidanEHRApplication.WorkFlow.ActivityPicture"
    d:DesignHeight="300" d:DesignWidth="400">


    <Grid Name="gridContainer"     Width="200" Height="160"  HorizontalAlignment="Center" VerticalAlignment="Center">
        <pic:BranchActivity x:Name="picBRANCH"></pic:BranchActivity>
        <pic:InteractoinAcitivity x:Name="picINTERACTION"></pic:InteractoinAcitivity>
        <pic:InitialAcitivity    x:Name="picBegin"></pic:InitialAcitivity>
        <pic:CompletionActivity     x:Name="picEnd"></pic:CompletionActivity>
        <pic:AutomationActivity    x:Name="picAUTOMATION"></pic:AutomationActivity>
        <pic:MergeActivity   x:Name="picMERGE"></pic:MergeActivity>
        <TextBlock   Name="txtActivityName" Foreground="Black" Text="新增流程"  FontSize="12"    
                     VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"  MaxWidth="90" >

        </TextBlock>
        <Canvas Width="100" Height="60">
            <TextBlock x:Name="txtTip" Text="" Canvas.Left="40" Canvas.Top="40"></TextBlock>
        </Canvas>
    </Grid>
</UserControl>
